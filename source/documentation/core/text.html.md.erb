~~~ python
def init():
   textFont('data/fonts/DroidSans.ttf', 24)

def display():
   lighting(False)

   text("upper left",   -4, 0,  4)
   text("upper right",   4, 0,  4)
   text("lower right",   4, 0, -4)
   text("lower left",   -4, 0, -4)
